---
interface Props {
  title?: string;
  subtitle?: string;
  background?: 'default' | 'surface' | 'forest' | 'terracotta';
  class?: string;
}

const { 
  title, 
  subtitle, 
  background = 'default',
  class: className 
} = Astro.props;

const backgroundClasses: Record<string, string> = {
  default: 'bg-default',
  surface: 'bg-surface',
  forest: 'bg-forest',
  terracotta: 'bg-terracotta',
};
---

<section class:list={['section', backgroundClasses[background], className]}>
  <div class="container">
    {title && <h2 class="section-title">{title}</h2>}
    {subtitle && <p class="section-subtitle">{subtitle}</p>}
    <slot />
  </div>
</section>

<style>
  .section {
    padding: var(--space-4xl) 0;
  }

  .bg-default {
    background-color: var(--color-background);
  }

  .bg-surface {
    background-color: var(--color-surface);
  }

  .bg-forest {
    background: linear-gradient(135deg, var(--color-forest), var(--color-forest-light));
    color: var(--color-white);
  }

  .bg-forest .section-title {
    color: var(--color-white);
  }

  .bg-terracotta {
    background: linear-gradient(135deg, var(--color-terracotta), var(--color-terracotta-dark));
    color: var(--color-white);
  }

  .bg-terracotta .section-title {
    color: var(--color-white);
  }

  .section-title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-2xl);
  }

  .bg-forest .section-subtitle,
  .bg-terracotta .section-subtitle {
    color: rgba(255, 255, 255, 0.9);
  }
</style>

