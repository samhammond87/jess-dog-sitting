---
import { getSiteSettings } from '../lib/sanity';

const settings = await getSiteSettings();

const currentYear = new Date().getFullYear();
const email = settings?.email || 'hello@jessdogsitting.com';
const phone = settings?.phone || '';
const siteName = settings?.siteName || 'Jess Dog Sitting';
const acknowledgement = settings?.acknowledgementOfCountry || '';
const abn = settings?.abn || '';
---

<footer class="footer">
  <div class="container footer-content">
    {acknowledgement && (
      <div class="acknowledgement">
        <p>{acknowledgement}</p>
      </div>
    )}

    <div class="footer-main">
      <div class="footer-brand">
        <a href="/" class="logo">
          <span class="logo-icon">üêï</span>
          <span class="logo-text">{siteName}</span>
        </a>
        <p class="tagline">
          Your pup's home away from home
        </p>
      </div>

      <div class="footer-links">
        <div class="link-group">
          <h4 class="link-group-title">Quick Links</h4>
          <a href="/gallery" class="footer-link">Gallery</a>
          <a href="/pricing" class="footer-link">Pricing & Terms</a>
          <a href="/bookings" class="footer-link">Bookings</a>
          <a href="/contact" class="footer-link">Contact</a>
        </div>

        <div class="link-group">
          <h4 class="link-group-title">Get in Touch</h4>
          <a href={`mailto:${email}`} class="footer-link">
            üìß {email}
          </a>
          {phone && (
            <a href={`tel:${phone.replace(/\D/g, '')}`} class="footer-link">
              üìû {phone}
            </a>
          )}
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="copyright">
        <p>¬© {currentYear} {siteName}. Made with üêæ and lots of love.</p>
        {abn && <p class="abn">ABN: {abn}</p>}
      </div>
    </div>
  </div>

  <div class="paw-prints" aria-hidden="true">
    <span class="paw">üêæ</span>
    <span class="paw">üêæ</span>
    <span class="paw">üêæ</span>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    background-color: var(--color-brown);
    color: var(--color-white);
    padding: var(--space-3xl) 0 var(--space-xl);
    overflow: hidden;
  }

  .footer-content {
    position: relative;
    z-index: 1;
  }

  .acknowledgement {
    padding-bottom: var(--space-xl);
    margin-bottom: var(--space-xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
  }

  .acknowledgement p {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
    font-style: italic;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-3xl);
    padding-bottom: var(--space-2xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-brand {
    max-width: 300px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: var(--space-md);
  }

  .logo-icon {
    font-size: 1.5em;
  }

  .logo-text {
    color: var(--color-sand);
  }

  .tagline {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-2xl);
  }

  .link-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .link-group-title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-sand);
    margin-bottom: var(--space-sm);
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer-link:hover {
    color: var(--color-white);
  }

  .footer-bottom {
    padding-top: var(--space-xl);
    text-align: center;
  }

  .copyright p {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.6);
  }

  .abn {
    margin-top: var(--space-xs);
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.5);
  }

  .paw-prints {
    position: absolute;
    bottom: 0;
    right: 0;
    display: flex;
    gap: var(--space-xl);
    opacity: 0.1;
    font-size: 4rem;
    transform: rotate(-15deg);
  }

  .paw {
    animation: float 3s ease-in-out infinite;
  }

  .paw:nth-child(2) {
    animation-delay: 0.5s;
  }

  .paw:nth-child(3) {
    animation-delay: 1s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .footer-brand {
      max-width: none;
      text-align: center;
    }

    .logo {
      justify-content: center;
    }

    .footer-links {
      grid-template-columns: 1fr;
      text-align: center;
    }
  }
</style>
