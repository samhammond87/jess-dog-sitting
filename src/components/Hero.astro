---
interface Props {
  title: string;
  subtitle?: string;
  background?: string;
}

const { title, subtitle, background } = Astro.props;
---

<section class="hero" style={background ? `background: ${background}` : undefined}>
  <div class="container">
    <h1>{title}</h1>
    {subtitle && <p class="subtitle">{subtitle}</p>}
    <slot />
  </div>
</section>

<style>
  .hero {
    background: transparent;
    padding: var(--space-3xl) 0 var(--space-md);
    text-align: center;
  }

  h1 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-md);
  }

  .subtitle {
    font-size: var(--text-xl);
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: 5rem;
    }

    h1 {
      font-size: var(--text-3xl);
    }
  }
</style>

