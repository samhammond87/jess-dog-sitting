---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import CtaSection from '../components/CtaSection.astro';
import { getTermsPolicies, getServiceTypes } from '../lib/sanity';

const [terms, serviceTypes] = await Promise.all([
  getTermsPolicies(),
  getServiceTypes(),
]);

// Fallback service types if none defined in Sanity
const defaultServices = [
  { _id: 'walks', title: 'Walks', description: 'Regular walks to keep your pup active and happy', icon: 'ðŸ•â€ðŸ¦º' },
  { _id: 'park', title: 'Park Time', description: 'Fun and social time at the local dog park', icon: 'ðŸŒ³' },
  { _id: 'days', title: 'Dog Days', description: "Full day care while you're at work or busy", icon: 'ðŸ ' },
  { _id: 'holidays', title: 'Holidays', description: 'Extended stays and overnight care for vacations', icon: 'ðŸŽ„' },
];

const services = serviceTypes.length > 0 ? serviceTypes : defaultServices;
---

<Layout title="Pricing & Terms" description="Transparent pricing for dog sitting services - walks, park time, dog days, and holiday stays">
  <div class="pricing-page">
    <Hero 
      title="Pricing & Terms" 
      subtitle="Transparent pricing with no hidden fees"
    />

    <section class="section pricing-section">
      <div class="container">
        <p class="pricing-intro">
          Pricing varies based on your dog's needs and the type of care required. 
          Get in touch to discuss rates for:
        </p>
        
        <div class="pricing-grid">
          {services.map((service) => (
            <div class="pricing-card">
              <span class="pricing-icon">{service.icon}</span>
              <h3>{service.title}</h3>
              <p>{service.description}</p>
            </div>
          ))}
        </div>

        <div class="contact-prompt">
          <a href="/bookings" class="btn btn-primary">Get a Quote</a>
        </div>
      </div>
    </section>

    {terms.length > 0 && (
      <section class="section terms-section paw-trail">
        <div class="container">
          <h2 class="terms-title">Terms & Conditions</h2>
          <div class="terms-grid">
            {terms.map((policy) => (
              <div class="terms-card">
                <h3>{policy.icon || 'ðŸ“‹'} {policy.title}</h3>
                {policy.items && policy.items.length > 0 && (
                  <ul>
                    {policy.items.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                )}
              </div>
            ))}
          </div>
          <div class="terms-footer">
            <p>By booking my services, you agree to these terms. Questions? <a href="/contact">Get in touch</a>!</p>
          </div>
        </div>
      </section>
    )}

    <CtaSection
      title="Ready to Book?"
      subtitle="Fill out the questionnaire and I'll get back to you!"
      buttonText="Book Now"
      buttonHref="/bookings"
    />
  </div>
</Layout>

<style>
  .pricing-section {
    background-color: var(--color-background);
  }

  .pricing-intro {
    text-align: center;
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto var(--space-2xl);
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }

  .pricing-card {
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
    text-align: center;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
  }

  .pricing-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .pricing-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--space-md);
  }

  .pricing-card h3 {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    margin-bottom: var(--space-sm);
  }

  .pricing-card p {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .contact-prompt {
    text-align: center;
  }

  .terms-section {
    background: var(--color-surface);
  }

  .terms-title {
    text-align: center;
    font-size: var(--text-3xl);
    color: var(--color-primary);
    margin-bottom: var(--space-2xl);
  }

  .terms-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }

  .terms-card {
    padding: var(--space-xl);
    background: var(--color-cream);
    border-radius: var(--radius-lg);
  }

  .terms-card h3 {
    margin-bottom: var(--space-md);
  }

  .terms-card ul {
    list-style: disc;
    padding-left: var(--space-lg);
  }

  .terms-card li {
    padding: var(--space-xs) 0;
    color: var(--color-text-muted);
  }

  .terms-footer {
    text-align: center;
    color: var(--color-text-muted);
  }

  .terms-footer a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  /* Grid is now auto-responsive via auto-fit */
</style>
