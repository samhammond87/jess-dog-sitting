---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import CtaSection from '../components/CtaSection.astro';
import { getTermsPolicies, getServiceTypes } from '../lib/sanity';

const [terms, serviceTypes] = await Promise.all([
  getTermsPolicies(),
  getServiceTypes(),
]);

// Fallback service types if none defined in Sanity
const defaultServices = [
  { _id: 'walks', title: 'Walks', description: 'Regular walks to keep your pup active and happy', icon: 'ðŸ•â€ðŸ¦º' },
  { _id: 'park', title: 'Park Time', description: 'Fun and social time at the local dog park', icon: 'ðŸŒ³' },
  { _id: 'days', title: 'Dog Days', description: "Full day care while you're at work or busy", icon: 'ðŸ ' },
  { _id: 'holidays', title: 'Holidays', description: 'Extended stays and overnight care for vacations', icon: 'ðŸŽ„' },
];

const services = serviceTypes.length > 0 ? serviceTypes : defaultServices;
---

<Layout title="Pricing & Terms" description="Transparent pricing for dog sitting services - walks, park time, dog days, and holiday stays">
  <div class="pricing-page">
    <Hero 
      title="Pricing & Terms" 
      subtitle="Transparent pricing with no hidden fees"
    />

    <section class="section pricing-section paw-trail">
      <div class="container">
        <div class="pricing-grid">
          {services.map((service) => (
            <div class="pricing-card">
              <span class="pricing-icon">{service.icon}</span>
              <h3>{service.title}</h3>
              <p>{service.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <CtaSection
      title="Ready to Book?"
      subtitle="Fill out the questionnaire and I'll get back to you!"
      buttonText="Submit Enquiry"
      buttonHref="/bookings"
    />

    {terms.length > 0 && (
      <section class="section terms-section paw-trail">
        <div class="container">
          <h2 class="terms-title">Terms & Conditions</h2>
          <div class="terms-grid">
            {terms.map((policy) => (
              <div class="terms-card">
                <h3>{policy.icon || 'ðŸ“‹'} {policy.title}</h3>
                {policy.items && policy.items.length > 0 && (
                  <ul>
                    {policy.items.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                )}
              </div>
            ))}
          </div>
          <div class="terms-footer">
            <p>By booking my services, you agree to these terms. Questions? <a href="/contact">Get in touch</a>!</p>
          </div>
        </div>
      </section>
    )}
  </div>
</Layout>

<style>
  .pricing-section {
    background-color: var(--color-background);
  }

  .pricing-grid {
    --cols: 4;
    --gap: var(--space-xl);
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--gap);
    margin-bottom: var(--space-2xl);
  }

  .pricing-card {
    flex: 1 1 calc((100% - (var(--cols) - 1) * var(--gap)) / var(--cols));
    max-width: calc((100% - (var(--cols) - 1) * var(--gap)) / var(--cols));
    min-width: 200px;
    background: var(--color-secondary);
    border: 1px solid var(--color-border-strong);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
    text-align: center;
    box-shadow: 0 8px 24px rgba(31, 42, 68, 0.08);
    transition: all var(--transition-base);
  }

  .pricing-card h3 {
    color: var(--color-text);
    margin-bottom: var(--space-sm);
  }

  .pricing-card p {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    line-height: 1.5;
  }

  /* If count % 4 === 1 (would leave 1 orphan), use 3 columns instead */
  .pricing-grid:has(.pricing-card:nth-last-child(1):nth-child(4n + 1)) {
    --cols: 3;
  }

  /* If count % 3 === 1 AND count % 4 === 1, use 2 columns */
  .pricing-grid:has(.pricing-card:nth-last-child(1):nth-child(4n + 1):nth-child(3n + 1)) {
    --cols: 2;
  }

  @media (max-width: 1024px) {
    .pricing-grid {
      --cols: 2;
    }

    .pricing-grid:has(.pricing-card:nth-last-child(1):nth-child(2n + 1)) {
      --cols: 3;
    }
  }

  @media (max-width: 640px) {
    .pricing-grid {
      gap: var(--space-2xl);
    }

    .pricing-card {
      flex: 1 1 100%;
      max-width: 100%;
    }
  }

  .pricing-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(31, 42, 68, 0.12);
    border-color: var(--color-primary-soft);
  }

  .pricing-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--space-md);
  }

  .pricing-card h3 {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    color: var(--color-text);
  }

  .pricing-card p {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .terms-section {
    background: var(--color-surface);
  }

  .terms-title {
    text-align: center;
    font-size: var(--text-3xl);
    color: var(--color-primary);
    margin-bottom: var(--space-2xl);
  }

  .terms-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }

  .terms-card {
    padding: var(--space-xl);
    background: var(--color-secondary);
    border-radius: var(--radius-lg);
  }

  .terms-card h3 {
    margin-bottom: var(--space-md);
  }

  .terms-card ul {
    list-style: disc;
    padding-left: var(--space-lg);
  }

  .terms-card li {
    padding: var(--space-xs) 0;
    color: var(--color-text-muted);
  }

  .terms-footer {
    text-align: center;
    color: var(--color-text-muted);
  }

  .terms-footer a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  /* Grid is now auto-responsive via auto-fit */
</style>
