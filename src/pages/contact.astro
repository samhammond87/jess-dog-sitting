---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import CtaSection from '../components/CtaSection.astro';
import { getSiteSettings } from '../lib/sanity';

const settings = await getSiteSettings();

const businessEmail = settings?.email || 'hello@dogdayssydney.com';
const businessPhone = settings?.phone || '';
---

<Layout title="Contact" description="Get in touch with Jess for dog sitting services">
  <div class="contact-page">
    <Hero 
      title="Contact Me" 
      subtitle="Have a question? I'd love to hear from you!"
    />

    <section class="section contact-section paw-trail">
      <div class="container">
        <div class="contact-content">
          <div class="contact-card">
            <div class="contact-item">
              <span class="contact-icon">ðŸ“§</span>
              <div class="contact-details">
                <h3>Email</h3>
                <a href={`mailto:${businessEmail}`} class="contact-link">
                  {businessEmail}
                </a>
              </div>
            </div>

            {businessPhone && (
              <div class="contact-item">
                <span class="contact-icon">ðŸ“ž</span>
                <div class="contact-details">
                  <h3>Phone</h3>
                  <a href={`tel:${businessPhone.replace(/\D/g, '')}`} class="contact-link">
                    {businessPhone}
                  </a>
                </div>
              </div>
            )}
          </div>

        </div>
      </div>
    </section>

    <CtaSection
      title="Ready to Book?"
      subtitle="Fill out the booking questionnaire and I'll get back to you within 24 hours to arrange a meet & greet."
      buttonText="Submit Enquiry"
      buttonHref="/bookings"
    />
  </div>
</Layout>

<style>
  .contact-section {
    background-color: var(--color-background);
  }

  .contact-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-card {
    background: var(--color-secondary);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
    box-shadow: var(--shadow-md);
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-lg);
    padding: var(--space-lg) 0;
  }

  .contact-item:not(:last-child) {
    border-bottom: 1px solid var(--color-border);
  }

  .contact-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .contact-details h3 {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-xs);
  }

  .contact-link {
    font-size: var(--text-xl);
    color: var(--color-primary);
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .contact-link:hover {
    color: var(--color-primary-hover);
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .contact-item {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: var(--space-md);
    }
  }
</style>
