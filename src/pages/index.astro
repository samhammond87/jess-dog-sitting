---
import Layout from '../layouts/Layout.astro';
import { getSiteSettings, urlFor, hasValidAsset } from '../lib/sanity';

const settings = await getSiteSettings();

const siteName = settings?.siteName ?? 'Jess Dog Sitting';
const tagline = settings?.tagline ?? "Your pup's home away from home";
const heroBlurb = settings?.heroBlurb ?? "Dogs love me, just ask them! Professional, caring dog sitting services with all the belly rubs, walks, and adventures they deserve.";

const heroImageUrl = hasValidAsset(settings?.heroImage)
  ? urlFor(settings.heroImage).width(1920).height(1080).quality(85).url() 
  : null;

const homeTitle = siteName;
const homeDescription = `${siteName} - ${tagline}. Professional dog sitting services in Sydney.`;
---

<Layout title={homeTitle} description={homeDescription}>
  <div class="home">
    <section class:list={['hero', { 'hero--no-image': !heroImageUrl }]}>
      {heroImageUrl && (
        <div class="hero-background">
          <img 
            src={heroImageUrl} 
            alt="" 
            class="hero-bg-image"
            loading="eager"
            fetchpriority="high"
          />
          <div class="hero-overlay"></div>
        </div>
      )}
      
      <div class="hero-content">
        <h1 class="hero-title">{tagline}</h1>
        <p class="hero-blurb">{heroBlurb}</p>
        
        <nav class="hero-nav">
          <a href="/gallery" class="nav-btn">Gallery</a>
          <a href="/pricing" class="nav-btn">Pricing</a>
          <a href="/bookings" class="nav-btn nav-btn-primary">Bookings</a>
          <a href="/contact" class="nav-btn">Contact</a>
        </nav>
      </div>
    </section>
  </div>
</Layout>

<style>
  .home {
    margin-top: calc(-1 * var(--header-height));
  }

  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(45, 45, 45, 0.4) 0%,
      rgba(45, 45, 45, 0.6) 50%,
      rgba(45, 45, 45, 0.7) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--space-2xl);
    max-width: 800px;
    animation: fadeInUp 0.8s ease forwards;
  }

  .hero-title {
    font-size: var(--text-4xl);
    color: var(--color-white);
    margin-bottom: var(--space-lg);
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
    line-height: 1.1;
  }

  .hero-blurb {
    font-size: var(--text-xl);
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: var(--space-2xl);
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.3);
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-md);
  }

  .nav-btn {
    padding: var(--space-md) var(--space-xl);
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-full);
    color: var(--color-white);
    font-weight: 600;
    font-size: var(--text-base);
    transition: all var(--transition-base);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .nav-btn:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
  }

  .nav-btn-primary {
    border: 2px solid var(--color-primary);
    box-shadow: 0 0 20px rgba(213, 157, 98, 0.3);
  }

  .nav-btn-primary:hover {
    background: rgba(255, 255, 255, 0.25);
    box-shadow: 0 0 30px rgba(213, 157, 98, 0.5);
  }

  /* Fallback when no hero image (explicit class for browser compatibility) */
  .hero--no-image {
    background: linear-gradient(
      135deg,
      var(--color-burgundy) 0%,
      var(--color-burgundy-deep) 100%
    );
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: var(--text-3xl);
    }

    .hero-blurb {
      font-size: var(--text-lg);
    }

    .hero-nav {
      flex-direction: column;
      width: 100%;
      max-width: 280px;
    }

    .nav-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
